<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:background="@drawable/gradient_main_background">

        <ImageView
            android:id="@+id/ivPacientIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pacient_icon"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:id="@+id/llyContainerData"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="6dp">

            <TextView
                android:id="@+id/tvNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo Paciente"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Peso Paciente"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad Paciente"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llyContainerView"
            android:layout_width="115dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivPacientSex"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="13dp"
                android:background="@drawable/image_circle_background"
                android:src="@drawable/male_symbol"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tvPacientCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad Paciente"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>